<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_background"
    tools:context=".ui.screens.settings.SettingsScreen">

    <!-- Foydalanuvchi rasmi -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/_32sdp"
        app:srcCompat="@drawable/user"
/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="User Info"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/urbanist_bold"
        android:layout_marginTop="@dimen/_170sdp"/>

    <!-- Telefon raqamini ko'rsatish uchun kartochka -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_210sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:cardElevation="@dimen/_2sdp"
        app:strokeWidth="@dimen/_1sdp"
        app:strokeColor="?attr/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_16sdp"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:src="@drawable/call"
                app:tint="?attr/colorAccent" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:text="Phone: +998 XX XXX XX XX"
                android:textSize="18sp"
                android:textColor="?attr/colorAccent"
                android:fontFamily="@font/gilory_medium" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Logout tugmasi -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_62sdp"
        android:text="Exit Account"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="?attr/colorPrimaryDark"
        android:paddingHorizontal="@dimen/_42sdp"
        android:paddingVertical="@dimen/_12sdp"
        android:fontFamily="@font/urbanist_bold"
        app:cornerRadius="@dimen/_8sdp" />

</FrameLayout>
