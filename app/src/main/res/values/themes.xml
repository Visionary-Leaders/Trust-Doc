<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImportantDocuments" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondaryContainer">@color/colorPrimary</item>
    </style>

    <style name="Theme.Intro" parent="Theme.ImportantDocuments">
    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="NavBarText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2sp</item>
    </style>
    <style name="Theme.Main" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/card_background</item>
        <item name="android:navigationBarColor">@color/navbar_bg</item>
    </style>
</resources>